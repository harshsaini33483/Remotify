<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#7f8c8d"
    tools:context=".fragments.about">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/about" />

    <TextView
        android:id="@+id/harsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Harsh Saini(151294)"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/anshit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/harsh"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_marginTop="31dp"
        android:text="Anshit Hayaran(151239)"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anshit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textColor="#fff"
        android:text="Sakar Kardekar(151375)"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />
</RelativeLayout>